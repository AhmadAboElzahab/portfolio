generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}
model Category {
  id        Int      @id @default(autoincrement())
  title     String
  description String?
  posts     Post[]
}

// Define the Post model
model Post {
  id        Int      @id @default(autoincrement())
  title     String
  date      DateTime
  content   String   // Assuming content is stored directly in the database
  category  Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}